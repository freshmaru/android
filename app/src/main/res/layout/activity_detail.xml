<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recruit.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FBFBFB">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/minor_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="모집 제목"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_margin="10px"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="제목 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FBFBFB">


            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:background="@drawable/minor_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="회사명"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_margin="10px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="회사명 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginHorizontal="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FBFBFB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/minor_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="주소"
                    android:textColor="#000000"
                    android:textSize="20dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="주소 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FBFBFB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/minor_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="기업 정보"
                    android:textColor="#000000"
                    android:textSize="20dp"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="고용형태"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="고용형태 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="급여"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_wadge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="급여 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="근무시간/형태"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_hr_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="근무시간/형태 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="직무내용"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_duty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="직무내용 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="우대사항"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_prfml"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="우대사항 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="접수방법"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_mthd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="접수방법 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="접수마감일"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_dday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="접수마감일 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전화번호 결과"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_margin="10dp"/>


        </LinearLayout>
    </ScrollView>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>